{
    "comments": {
        "lineComment": "//",
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
          "start": "^\\s*//\\s*?\\b",
          "end": "^\\s*//\\s*?\\b"
        }
   },    
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
            "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"`]*|\\([^)\"`]*|\\[[^\\]\"`]*)$",
            "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\}\\]].*$"
          }           
}
