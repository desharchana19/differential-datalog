{
  "repository": {
        "string": {
            "patterns": [
                {
                    "name": "constant.character.escape.ddlog",
                    "match": "\\\\[0nrvtbfa]"
                },
                {
                    "name": "string.quoted.double.ddlog",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.ddlog",
                            "match": "\\\\[0nrvtbfa]"
                        },
                        {
                            "name": "constant.other.placeholder.ddlog",
                            "match": "(\\{)([a-zA-Z0-9_?:$.*<>]+)?(\\})"
                        }
                    ]
                },
                {
                    "name": "string.quoted.double.raw.ddlog",
                    "begin": "(\\[)(\\|)",               
                    "end": "(\\|)(\\])",
                    "patterns": [
                        {
                            "name": "constant.character.escape.ddlog",
                            "match": "\\\\[0nrvtbfa]"
                        },
                        {
                            "name": "constant.other.placeholder.ddlog",
                            "match": "(\\{)([a-zA-Z0-9_?:$.*<>]+)?(\\})"
                        }
                    ]                                       
                },                
                {
                    "name": "string.quoted.interpolated.ddlog",
                    "begin": "(\\$)(\\{)",               
                    "end": "(\\})",
                    "patterns": [
                        {
                            "name": "constant.character.escape.ddlog",
                            "match": "\\\\[0nrvtbfa]"
                        },
                        {
                            "name": "constant.other.placeholder.ddlog",
                            "match": "(\\{)([a-zA-Z0-9_?:$.*<>]+)?(\\})"
                        }
                    ]                                       
                },
                {
                    "name": "string.quoted.interpolated.raw.ddlog",
                    "begin": "(\\$)(\\[)(\\|)",               
                    "end": "(\\|)(\\])",
                    "patterns": [
                        {
                            "name": "constant.character.escape.ddlog",
                            "match": "\\\\[0nrvtbfa]"
                        },
                        {
                            "name": "constant.other.placeholder.ddlog",
                            "match": "(\\{)([a-zA-Z0-9_?:$.*<>]+)?(\\})"
                        }
                    ]                                       
                }                  
            ]
        }    
    }
}
