{
  "repository": {
        "string": {
            "patterns": [
                {
                    "name": "constant.character.escape.ddlog",
                    "match": "\\\\(x[0-9A-Fa-f]{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.)"
                },
                {
                    "name": "constant.character.ddlog",
                    "match": "b?'([^'\\\\]|\\\\(x[0-9A-Fa-f]{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.))'"
                },
                {
                    "name": "string.quoted.double.ddlog",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.ddlog",
                            "match": "\\\\(x[0-9A-Fa-f]{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.)"
                        },
                        {
                            "name": "constant.other.placeholder.ddlog",
                            "match": "(\\{)([a-zA-Z0-9_?:$.*<>]+)?(\\})"
                        }
                    ]
                },
                {
                    "name": "string.quoted.double.raw.ddlog",
                    "begin": "(\\[)(\\|)",               
                    "end": "(\\|)(\\])",
                    "patterns": [
                        {
                            "name": "constant.character.escape.ddlog",
                            "match": "\\\\(x[0-9A-Fa-f]{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.)"
                        },
                        {
                            "name": "constant.other.placeholder.ddlog",
                            "match": "(\\{)([a-zA-Z0-9_?:$.*<>]+)?(\\})"
                        }
                    ]                                       
                },                
                {
                    "name": "string.quoted.interpolated.ddlog",
                    "begin": "(\\$)(\\{)",               
                    "end": "(\\})",
                    "patterns": [
                        {
                            "name": "constant.character.escape.ddlog",
                            "match": "\\\\(x[0-9A-Fa-f]{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.)"
                        },
                        {
                            "name": "constant.other.placeholder.ddlog",
                            "match": "(\\{)([a-zA-Z0-9_?:$.*<>]+)?(\\})"
                        }
                    ]                                       
                },
                {
                    "name": "string.quoted.interpolated.raw.ddlog",
                    "begin": "(\\$)(\\[)(\\|)",               
                    "end": "(\\|)(\\])",
                    "patterns": [
                        {
                            "name": "constant.character.escape.ddlog",
                            "match": "\\\\(x[0-9A-Fa-f]{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.)"
                        },
                        {
                            "name": "constant.other.placeholder.ddlog",
                            "match": "(\\{)([a-zA-Z0-9_?:$.*<>]+)?(\\})"
                        }
                    ]                                       
                }                  
            ]
        }    
    }
}
