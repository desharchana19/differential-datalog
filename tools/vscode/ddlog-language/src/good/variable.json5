{
  "repository": {
        "variable": {
            "patterns": [
                {
                    "name": "variable.parameter.ddlog",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*\\s*)(?=[:]\\s*)"
                },
                {
                    "name": "variable.local.ddlog",
                    "match": "\\b(?<=var)(\\s*)([a-z_][a-zA-Z0-9_]*)\\s*"
                },
                {
                    "name": "variable.language.ddlog",
                    "match": "\\b(_)\\b"
                },
                {
                    "name": "variable.loop.ddlog",
                    "match": "\\b(?<=\\()(\\s*)([a-z_][a-zA-Z0-9_]*)\\s*(?=(\\bin\\b)\\s*)"
                }
            ]
        }
    }
}
