{
  "repository": {
        "variable": {
            "patterns": [
                {
                    "name": "variable.parameter.ddlog",
                    "match": "\\b([a-z_][a-zA-Z0-9_]+)(?=[:] )"
                },
                {
                    "name": "variable.parameter.ddlog",
                    "match": "\\b([a-z_]+)(?=[:] )"
                },                     
                {
                    "name": "variable.local.ddlog",
                    "match": "\\b(?<=var)(\\s*)([a-z_][a-zA-Z0-9_]*)"
                },
                {
                    "name": "variable.local.ddlog",
                    "match": "\\b(?<=var)(\\s*)([a-z_]+)"
                },                  
                {
                    "name": "variable.language.ddlog",
                    "match": "\\b(_)\\b"
                }
            ]
        }
    }
}
